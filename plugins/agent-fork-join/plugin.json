{
  "name": "agent-fork-join",
  "version": "0.1.0",
  "description": "Multi-agent git workflow orchestrator with isolated worktrees, FIFO merge queue, and automated PR lifecycle management.",
  "type": "workflow",
  "category": "development",
  "author": {
    "name": "Claude Plugins",
    "github": "claude-plugins"
  },
  "license": "MIT",
  "keywords": [
    "git",
    "multi-agent",
    "worktree",
    "merge-queue",
    "fork-join",
    "parallel",
    "orchestration",
    "pr-automation"
  ],
  "main": "SKILL.md",
  "requirements": {
    "tools": [
      "git",
      "gh",
      "cargo"
    ],
    "minClaudeCodeVersion": "2.0.0"
  },
  "hooks": {
    "UserPromptSubmit": "hooks/on-prompt-submit.sh",
    "AgentSpawn": "hooks/on-agent-spawn.sh",
    "AgentComplete": "hooks/on-agent-complete.sh"
  },
  "config": {
    "maxConcurrentAgents": 8,
    "mergeStrategy": "rebase",
    "maxMergeRetries": 3,
    "testCommand": "npm test",
    "validationCommands": [
      "npm run lint",
      "npm run typecheck"
    ],
    "defaultReviewers": [],
    "maxReviewers": 3,
    "useCodeowners": true,
    "autoMergeOnSuccess": false,
    "featureBranchPrefix": "feature/",
    "agentBranchPrefix": "agent/"
  },
  "binaries": {
    "merge-daemon": {
      "source": "daemon/",
      "language": "rust",
      "build": "cargo build --release",
      "output": "target/release/merge-daemon"
    }
  }
}
